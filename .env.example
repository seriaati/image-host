# Basic configuration
API_KEY=your_api_key_here

# Storage configuration
# Set to "local" or "s3"
STORAGE_TYPE=local

# S3-compatible storage settings (required when STORAGE_TYPE=s3)
# For Cloudflare R2:
# S3_ENDPOINT_URL=https://[account-id].r2.cloudflarestorage.com
# For AWS S3, leave S3_ENDPOINT_URL empty

S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_REGION=auto
S3_CUSTOM_DOMAIN=